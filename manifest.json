{
  "manifest_version": 3,
  "name": "aiFiverr - AI-Powered Fiverr Assistant",
  "description": "Enhance your Fiverr experience with AI-powered chat sessions, proposal generation, and conversation analysis",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "background"
  ],
  "host_permissions": [
    "https://www.fiverr.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.fiverr.com/*"],
      "js": [
        "content/utils/helpers.js",
        "content/utils/storage.js",
        "content/utils/export-import.js",
        "content/utils/prompt-selector.js",
        "content/fiverr/detector.js",
        "content/fiverr/extractor.js",
        "content/fiverr/injector.js",
        "content/ai/session.js",
        "content/ai/api-manager.js",
        "content/ai/gemini-client.js",
        "content/ai/knowledge-base.js",
        "content/main.js"
      ],
      "css": ["content/styles/main.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content/styles/*",
        "icons/*",
        "popup/*"
      ],
      "matches": ["https://www.fiverr.com/*"]
    }
  ]
}
